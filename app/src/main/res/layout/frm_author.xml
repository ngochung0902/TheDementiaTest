<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="thedementiatest.fragment.FrmAuthor">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/s10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Author"
            android:textColor="@color/white"
            android:textSize="@dimen/s18"
            android:id="@+id/tv_author" />
    </LinearLayout>
    <LinearLayout
        android:background="@mipmap/bg_main_h"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="@dimen/s20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_bg_score">
            <TextView
                android:id="@+id/tv_au"
                android:textColorLink="@color/colorPrimaryDark"
                android:autoLink="email|web"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wstevensaunders"
                android:textSize="@dimen/s16"
                android:layout_margin="@dimen/s10"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
