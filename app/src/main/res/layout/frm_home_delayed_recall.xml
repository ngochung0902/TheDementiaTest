<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.FrmHome_Delayed_Recall">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_back"
            android:layout_margin="@dimen/s5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_back"/>

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="@string/back"
            android:textSize="@dimen/s16"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/s10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DelayedRecall"
            android:textColor="@color/white"
            android:textSize="@dimen/s18"
            android:id="@+id/tv_delayedrecall" />
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:text="@string/next"
            android:textSize="@dimen/s16"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/img_next"
            android:layout_margin="@dimen/s5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_next"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_main_h">
        <LinearLayout
            android:layout_marginTop="@dimen/s20"
            android:layout_marginLeft="@dimen/s16"
            android:layout_marginRight="@dimen/s16"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_de"
                android:layout_gravity="center"
                android:layout_margin="@dimen/s10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/whatwerethe"
                android:textSize="@dimen/s16" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/s5"
            android:layout_marginLeft="@dimen/s16"
            android:layout_marginRight="@dimen/s10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_lamp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/s10"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/LAMP"
                android:textSize="@dimen/s16" />

            <Switch
                android:layout_marginRight="5dp"
                android:textOn="@string/space"
                android:textOff="@string/space"
                android:layout_marginLeft="@dimen/s10"
                android:layout_gravity="center|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sw_lamp"/>

            <TextView
                android:id="@+id/tvsw_lamp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:gravity="left"
                android:textSize="@dimen/s16"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/s5"
            android:layout_marginLeft="@dimen/s16"
            android:layout_marginRight="@dimen/s10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_phone"
                android:layout_gravity="center"
                android:layout_margin="@dimen/s10"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/PHONE"
                android:textSize="@dimen/s16" />

            <Switch
                android:layout_marginRight="5dp"
                android:textOn="@string/space"
                android:textOff="@string/space"
                android:layout_marginLeft="@dimen/s10"
                android:layout_gravity="center|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sw_phone"/>

            <TextView
                android:id="@+id/tvsw_phone"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:gravity="left"
                android:textSize="@dimen/s16"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/s5"
            android:layout_marginLeft="@dimen/s16"
            android:layout_marginRight="@dimen/s10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_chair"
                android:layout_gravity="center"
                android:layout_margin="@dimen/s10"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/CHAIR"
                android:textSize="@dimen/s16" />

            <Switch
                android:layout_marginRight="5dp"
                android:textOn="@string/space"
                android:textOff="@string/space"
                android:layout_marginLeft="@dimen/s10"
                android:layout_gravity="center|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sw_chair"/>

            <TextView
                android:id="@+id/tvsw_chair"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:gravity="left"
                android:textSize="@dimen/s16"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/s5"
            android:layout_marginLeft="@dimen/s16"
            android:layout_marginRight="@dimen/s10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_car"
                android:layout_gravity="center"
                android:layout_margin="@dimen/s10"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/CAR"
                android:textSize="@dimen/s16" />

            <Switch
                android:layout_marginRight="5dp"
                android:textOn="@string/space"
                android:textOff="@string/space"
                android:layout_marginLeft="@dimen/s10"
                android:layout_gravity="center|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sw_car"/>

            <TextView
                android:id="@+id/tvsw_car"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:gravity="left"
                android:textSize="@dimen/s16"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/s5"
            android:layout_marginLeft="@dimen/s16"
            android:layout_marginRight="@dimen/s10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_house"
                android:layout_gravity="center"
                android:layout_margin="@dimen/s10"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/HOUSE"
                android:textSize="@dimen/s16" />

            <Switch
                android:layout_marginRight="5dp"
                android:textOn="@string/space"
                android:textOff="@string/space"
                android:layout_marginLeft="@dimen/s10"
                android:layout_gravity="center|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sw_house"/>

            <TextView
                android:id="@+id/tvsw_house"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:gravity="left"
                android:textSize="@dimen/s16"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/s20"
            android:layout_marginLeft="@dimen/s16"
            android:layout_marginRight="@dimen/s16"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_click"
                android:gravity="center"
                android:layout_margin="@dimen/s10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clickthebutton"
                android:textSize="@dimen/s16" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
