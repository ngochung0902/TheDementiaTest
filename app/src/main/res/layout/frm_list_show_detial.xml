<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActList_ShowDetial">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_back"
            android:layout_margin="@dimen/s5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_back"/>

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textSize="@dimen/s16"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/s10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:textColor="@color/white"
            android:textSize="@dimen/s18"
            android:id="@+id/textView" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textSize="@dimen/s16"
            android:textColor="@color/white"
            />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/img_next"
            android:layout_margin="@dimen/s5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_next"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_main_h"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/s15"
            android:layout_marginRight="@dimen/s15"
            android:layout_marginTop="@dimen/s15"
            android:background="@mipmap/bg_transfer_h">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/name"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/name"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/IsPersonAlert"/>
                <TextView
                    android:id="@+id/tv_isperson"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/name"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/Dateofbirth"/>
                <TextView
                    android:id="@+id/tv_dateofbirth"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/name"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/LevelofEducation"/>
                <TextView
                    android:id="@+id/tv_education"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/name"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/sex"/>
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/sex"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/Ethnicity"/>
                <TextView
                    android:id="@+id/tv_ethnicity"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/Ethnicity"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/Age"/>
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/Age"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/work"/>
                <TextView
                    android:id="@+id/tv_work"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s15"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/work"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/s15"
            android:layout_marginBottom="@dimen/s15"
            android:layout_marginLeft="@dimen/s15"
            android:background="@mipmap/bg_transfer_h">
            <TextView
                android:id="@+id/tv_textcount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/s15"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
