<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActList_ShowDetial">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_back"
            android:layout_margin="@dimen/s5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_back"/>

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="@string/back"
            android:textSize="@dimen/s16"
            android:textColor="@color/white"
            />

        <TextView
            android:visibility="invisible"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/s10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:textColor="@color/white"
            android:textSize="@dimen/s18"
            android:id="@+id/tv" />
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Share"
            android:textSize="@dimen/s16"
            android:textColor="@color/white"
            />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/img_next"
            android:layout_margin="@dimen/s5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_next"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_main_h"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s20"
            android:layout_marginRight="@dimen/s20"
            android:layout_marginTop="@dimen/s20"
            android:layout_marginBottom="@dimen/s10"
            android:background="@drawable/custom_bg_score">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/name"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/s16"
                    android:layout_margin="@dimen/s5"
                    android:textColor="@color/black"
                    android:text="@string/name"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/s20"
            android:layout_marginBottom="@dimen/s20"
            android:layout_marginLeft="@dimen/s20"
            android:background="@drawable/custom_bg_score">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/IsPersonAlert"/>
                <TextView
                    android:id="@+id/tv_isperson"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/name"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/Dateofbirth"/>
                <TextView
                    android:id="@+id/tv_dateofbirth"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_4"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s5"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="Level of Education: "/>
                <TextView
                    android:id="@+id/tv_education"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/name"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_5"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/sex"/>
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/sex"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_6"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/Ethnicity"/>
                <TextView
                    android:id="@+id/tv_ethnicity"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/Ethnicity"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_7"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/Age"/>
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/Age"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_8"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/work"/>
                <TextView
                    android:id="@+id/tv_work"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/work"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_9"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="Score:"/>
                <TextView
                    android:id="@+id/tv_score"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_marginTop="@dimen/s8"
                    android:textSize="@dimen/s16"
                    android:textColor="@color/black"
                    android:text="@string/work"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginRight="@dimen/s20"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/s5"
                android:layout_marginBottom="@dimen/s5"
                />

            <TextView
                android:textSize="@dimen/s16"
                android:textColor="@color/black"
                android:id="@+id/tv_textcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s15"
                android:layout_marginTop="@dimen/s5"
                android:layout_marginBottom="@dimen/s5"
                android:layout_marginRight="@dimen/s15"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
